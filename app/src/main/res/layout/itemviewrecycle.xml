<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="15dp"
    android:layout_marginTop="20dp"
    android:clipToPadding="false"
    android:orientation="vertical"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="399dp"
        android:layout_height="150dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp"
        android:layout_marginBottom="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cardview_box"
            android:clipToPadding="false">

            <ImageView
                android:id="@+id/image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentEnd="true"></ImageView>

            <TextView
                android:id="@+id/judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/backgroundred"
                android:text="judul"
                android:textColor="@color/White"
                android:textSize="18sp"></TextView>

            <TextView
                android:id="@+id/judul2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/judul"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="judul2"
                android:textColor="@color/Black"
                android:textSize="18sp"></TextView>

            <View
                android:id="@+id/divider"
                style="@style/Divider"
                android:layout_width="2dp"
                android:layout_height="27dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="75dp"
                android:layout_toRightOf="@id/content"
                android:background="@color/LightGrey"></View>

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/judul2"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="content"
                android:textColor="@color/Black"
                android:textSize="25dp"
                android:textStyle="bold"></TextView>


            <TextView
                android:id="@+id/content2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="70dp"
                android:layout_toRightOf="@id/content"
                android:text="content2"
                android:textColor="@color/Black"
                android:textSize="25sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:text="price"
                android:textColor="@color/Red"
                android:textSize="18sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/pricedisc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/content2"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@id/price"
                android:background="@drawable/pricediscdrawable"
                android:text="pricedisc"
                android:textColor="@color/DarkGray"
                android:textSize="18sp"></TextView>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>